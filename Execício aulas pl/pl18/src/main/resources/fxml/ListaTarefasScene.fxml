<BorderPane onKeyReleased="#teclaPressionadaAction" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.isep.dei.pl18.ListaTarefasSceneController">
   <bottom>
      <GridPane vgap="5.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="btnAdicionarTarefas" defaultButton="true" mnemonicParsing="false" onAction="#adicionarTarefaAction" prefHeight="25.0" prefWidth="410.0" text="Adicionar Tarefa" GridPane.halignment="CENTER" />
            <Button fx:id="btnLimparTarefas" mnemonicParsing="false" onAction="#limparTarefasAction" prefHeight="25.0" prefWidth="409.0" text="Limpar Tarefas" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </GridPane>
   </bottom>
   <right>
      <TextArea fx:id="txtAreaTarefas" editable="false" prefWidth="400.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets left="10.0" right="10.0" top="5.0" />
         </BorderPane.margin></TextArea>
   </right>
</BorderPane>
